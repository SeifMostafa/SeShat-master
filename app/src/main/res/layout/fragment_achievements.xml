<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/help_fragment_layout"
    android:orientation="vertical"
    tools:context=".layout.AchievementsFragment"
    android:background="#eeeeee">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="10dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_marginTop="@dimen/item_margin"
            android:id="@+id/teacher_layout"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/teacher_btn_frame"
                android:layout_width="@dimen/teacher_icon_width"
                android:layout_height="@dimen/teacher_icon_height"
                android:background="@color/transparent"
                android:visibility="gone"
                />
            <ImageButton
                android:id="@+id/teacher_btn"
                android:layout_width="@dimen/teacher_icon_width"
                android:layout_height="@dimen/teacher_icon_height"
                android:background="@drawable/arabwoman"
                tools:ignore="RtlHardcoded"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/mike_voice_btn"
                android:layout_width="@dimen/mic_icon_width"
                android:layout_height="@dimen/mic_icon_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/mike_voice"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/book_layout"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/book_btn_frame"
                android:layout_width="@dimen/book_icon_width"
                android:layout_height="@dimen/book_icon_height"
                android:layout_gravity="right"
                android:layout_marginEnd="15dp"
                android:background="@color/transparent"
                android:visibility="gone"
                tools:ignore="RtlHardcoded"/>
            <ImageButton
                android:id="@+id/imagebutton_book"
                android:layout_width="@dimen/book_icon_width"
                android:layout_height="@dimen/book_icon_height"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@drawable/book"
                tools:ignore="RtlHardcoded"/>
        </FrameLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/achievementsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
